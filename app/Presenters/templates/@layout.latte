<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{block #title}Starter Skeleton{/}</title>

    <!-- Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css"/>

    <!-- Theme -->
    <link rel="stylesheet" href="{$basePath}/assets/css/theme.css"/>
</head>
<body>
<header class="header">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" n:href=":Home:">Starter</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#menu-collapse"
                    aria-controls="menu-collapse"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="menu-collapse">
                <ul class="navbar-nav mr-auto">
                    <li n:class="$presenter->isLinkCurrent(':Home:') ? active, nav-item">
                        <a class="nav-link" n:href=":Home:">Home</a>
                    </li>
                    <li n:class="$presenter->isLinkCurrent(':Contact:') ? active, nav-item">
                        <a class="nav-link" n:href=":Contact:">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container">
    <!-- Main: alerts -->
    <section class="alerts" n:inner-foreach="$flashes as $flash">
        <div class="alert alert-{$flash->type}" role="alert">
            {$flash->message}
        </div>
    </section>
    <!-- /Main: alerts -->

    <!-- Main: content -->
    <section class="content">
        {include #content}
    </section>
    <!-- /Main: content -->
</main>

<footer class="footer">
    <div class="container">
        <span class="text-muted">
            &copy; {=date(Y)} Starter
        </span>
    </div>
</footer>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>

</body>
</html>
